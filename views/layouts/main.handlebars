</head>

<body>
    <header>
        <h1>Workout Tracker</h1>
        <nav>
            {{#if logged_in}}
            <!-- Homepage (Calendar Icon) -->
            <a href="/homepage">Calendar</a>
            <button></button>
            <!-- Workout (Dumbbell Icon) -->
            <a href="/workoutPage">Workout</a>
            <!-- Workout Planner (Stopwatch Icon) -->
            <a href="/workoutPlanner">Workout Planner</a>
            <!-- Profile (User Icon) -->
            <a href="/profile">Profile</a> |
            <button class="no-button" id="Logout">Logout</button>
            <button></button>
            <!-- If User Isn't Logged in, Show Login and Sign Up Links -->
            {{else}}
            <a href="/login">Login</a>
            {{/if}}
        </nav>
    </header>

    <main>
        <!-- Render the Sub Layout -->
        {{{ body }}}
    </main>

    <footer>
